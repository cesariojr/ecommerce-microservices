<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/products">
                <i class="fas fa-store me-2"></i>E-commerce Demo
            </a>
            
            <div class="navbar-nav ms-auto">
                <a class="nav-link" href="/architecture">
                    <i class="fas fa-sitemap me-1"></i>Arquitetura
                </a>
                <% if (user) { %>
                    <a class="nav-link" href="/dashboard">
                        <i class="fas fa-tachometer-alt me-1"></i>Dashboard
                    </a>
                    <% if (user.role === 'customer') { %>
                        <a class="nav-link" href="/cart">
                            <i class="fas fa-shopping-cart me-1"></i>Cart
                        </a>
                    <% } %>
                    <form class="d-inline" action="/logout" method="POST">
                        <button class="btn btn-outline-light btn-sm" type="submit">
                            <i class="fas fa-sign-out-alt me-1"></i>Logout
                        </button>
                    </form>
                <% } else { %>
                    <a class="nav-link" href="/login">
                        <i class="fas fa-sign-in-alt me-1"></i>Login
                    </a>
                <% } %>
            </div>
        </div>
    </nav>

    <!-- Alerts -->
    <% if (typeof success !== 'undefined' && success) { %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <%= success %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    <% } %>
    
    <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <%= error %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    <% } %>

    <!-- Filters -->
    <div class="container my-4">
        <div class="row">
            <div class="col-md-8">
                <form method="GET" action="/products" class="d-flex">
                    <input type="text" class="form-control me-2" name="search" 
                           placeholder="Search products..." value="<%= searchQuery || '' %>">
                    <button class="btn btn-outline-primary" type="submit">
                        <i class="fas fa-search"></i>
                    </button>
                </form>
            </div>
            <div class="col-md-4">
                <select class="form-select" onchange="filterByCategory(this.value)">
                    <option value="">All Categories</option>
                    <% categories.forEach(category => { %>
                        <option value="<%= category %>" <%= currentCategory === category ? 'selected' : '' %>>
                            <%= category %>
                        </option>
                    <% }); %>
                </select>
            </div>
        </div>
    </div>

    <!-- Products Grid -->
    <div class="container">
        <div class="row">
            <% products.forEach(product => { %>
                <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                    <div class="card h-100">
                        <img src="<%= product.image_url %>" class="card-img-top" alt="<%= product.name %>">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title"><%= product.name %></h5>
                            <p class="card-text text-muted small flex-grow-1">
                                <%= product.description %>
                            </p>
                            <div class="mt-auto">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <span class="h5 text-primary mb-0">$<%= product.price %></span>
                                    <span class="badge bg-secondary"><%= product.category %></span>
                                </div>
                                <div class="d-flex justify-content-between align-items-center">
                                    <small class="text-muted">
                                        Stock: <%= product.stock_quantity %>
                                    </small>
                                    <% if (user && user.role === 'customer' && product.stock_quantity > 0) { %>
                                        <form action="/cart/add/<%= product.id %>" method="POST" class="d-inline">
                                            <button class="btn btn-primary btn-sm" type="submit">
                                                <i class="fas fa-cart-plus"></i>
                                            </button>
                                        </form>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>

        <!-- Pagination -->
        <% if (pagination.pages > 1) { %>
            <nav aria-label="Product pagination">
                <ul class="pagination justify-content-center">
                    <% for (let i = 1; i <= pagination.pages; i++) { %>
                        <li class="page-item <%= pagination.page === i ? 'active' : '' %>">
                            <a class="page-link" href="?page=<%= i %><%= currentCategory ? '&category=' + currentCategory : '' %><%= searchQuery ? '&search=' + searchQuery : '' %>">
                                <%= i %>
                            </a>
                        </li>
                    <% } %>
                </ul>
            </nav>
        <% } %>
    </div>

    <!-- Footer -->
    <footer class="bg-dark text-white py-4 mt-5">
        <div class="container text-center">
            <h6><i class="fas fa-graduation-cap me-2"></i>MBA Course Demo</h6>
            <p class="mb-0">OAuth 2.0 Authentication & Authorization in Microservices</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function filterByCategory(category) {
            const url = new URL(window.location);
            if (category) {
                url.searchParams.set('category', category);
            } else {
                url.searchParams.delete('category');
            }
            url.searchParams.delete('page');
            window.location = url;
        }
    </script>
</body>
</html>
