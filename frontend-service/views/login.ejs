<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
        }
        .login-card {
            background: white;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">
                <div class="login-card">
                    <div class="card-body p-5">
                        <!-- Header -->
                        <div class="text-center mb-4">
                            <i class="fas fa-store fa-3x text-primary mb-3"></i>
                            <h2 class="fw-bold">OAuth 2.0 Demo</h2>
                            <p class="text-muted">Microservices Authentication</p>
                        </div>

                        <!-- Error Alert -->
                        <% if (error) { %>
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <i class="fas fa-exclamation-circle me-2"></i><%= error %>
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        <% } %>

                        <!-- Login Form -->
                        <form action="/login" method="POST">
                            <div class="mb-3">
                                <label for="email" class="form-label fw-semibold">
                                    <i class="fas fa-envelope me-2 text-primary"></i>Email
                                </label>
                                <input type="email" class="form-control form-control-lg" 
                                       id="email" name="email" required>
                            </div>

                            <div class="mb-4">
                                <label for="password" class="form-label fw-semibold">
                                    <i class="fas fa-lock me-2 text-primary"></i>Password
                                </label>
                                <input type="password" class="form-control form-control-lg" 
                                       id="password" name="password" required>
                            </div>

                            <button type="submit" class="btn btn-primary btn-lg w-100 mb-3">
                                <i class="fas fa-sign-in-alt me-2"></i>Login
                            </button>
                        </form>

                        <!-- Demo Users -->
                        <div class="text-center mb-3">
                            <hr class="my-4">
                            <small class="text-muted bg-white px-3">Demo Users</small>
                        </div>

                        <div class="row g-2">
                            <div class="col-4">
                                <div class="card bg-light border-0 text-center">
                                    <div class="card-body p-2">
                                        <i class="fas fa-user-shield text-danger mb-1"></i>
                                        <h6 class="card-title mb-1 small">Admin</h6>
                                        <small class="text-muted d-block">admin@ecommerce.com</small>
                                        <small class="text-muted">admin123</small>
                                        <button type="button" class="btn btn-outline-danger btn-sm mt-1" 
                                                onclick="fillLogin('admin@ecommerce.com', 'admin123')">
                                            Use
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="card bg-light border-0 text-center">
                                    <div class="card-body p-2">
                                        <i class="fas fa-chart-bar text-warning mb-1"></i>
                                        <h6 class="card-title mb-1 small">Viewer</h6>
                                        <small class="text-muted d-block">viewer@ecommerce.com</small>
                                        <small class="text-muted">viewer123</small>
                                        <button type="button" class="btn btn-outline-warning btn-sm mt-1" 
                                                onclick="fillLogin('viewer@ecommerce.com', 'viewer123')">
                                            Use
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="card bg-light border-0 text-center">
                                    <div class="card-body p-2">
                                        <i class="fas fa-user text-success mb-1"></i>
                                        <h6 class="card-title mb-1 small">Customer</h6>
                                        <small class="text-muted d-block">customer@ecommerce.com</small>
                                        <small class="text-muted">customer123</small>
                                        <button type="button" class="btn btn-outline-success btn-sm mt-1" 
                                                onclick="fillLogin('customer@ecommerce.com', 'customer123')">
                                            Use
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Back to Home -->
                        <div class="text-center mt-4">
                            <a href="/" class="text-decoration-none">
                                <i class="fas fa-arrow-left me-2"></i>Back to Store
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Architecture Info -->
        <div class="row justify-content-center mt-4">
            <div class="col-md-6 col-lg-5">
                <div class="card bg-white bg-opacity-10 border-0 text-white">
                    <div class="card-body p-3 text-center">
                        <h6 class="mb-2">
                            <i class="fas fa-microchip me-2"></i>
                            Microservices Architecture
                        </h6>
                        <small class="d-block">
                            <i class="fas fa-shield-alt me-1"></i>
                            OAuth 2.0 + JWT Authentication
                        </small>
                        <small class="d-block">
                            <i class="fas fa-server me-1"></i>
                            Auth Service (3001) + Product Service (3002)
                        </small>
                        <small class="d-block">
                            <i class="fas fa-users-cog me-1"></i>
                            RBAC: Admin, Viewer, Customer Roles
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function fillLogin(email, password) {
            document.getElementById('email').value = email;
            document.getElementById('password').value = password;
            
            // Visual feedback
            const emailInput = document.getElementById('email');
            const passwordInput = document.getElementById('password');
            
            emailInput.classList.add('border-success');
            passwordInput.classList.add('border-success');
            
            setTimeout(() => {
                emailInput.classList.remove('border-success');
                passwordInput.classList.remove('border-success');
            }, 2000);
        }
    </script>
</body>
</html>
